@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/style.css">

<div class="intro" id="intro">
    <div class="container">
        <div class="intro_inner">
            <h1 class="intro__title">
                Football Show :)
            </h1>
            <h2 class="intro__subtitle">
                Several quotes from famous football players
            </h2>
        </div>
    </div>
</div>


<div class="testimonals testimonals--white">
    <div class="container">
        <div class="testimonials__item">
            <div class="testimonials__content testimonials__content--black">
                <div class="testimonials__text">“Always stay optimistic. You have to be professional and work the way you can. Hard work is the key to success.“</div>
                <div class="testimonials__author">Cristiano Ronaldo, Portuguese footballer</div>
            </div>
            <div class="testimonials__photo">
                <img class="testimonials__img testimonials__img--left" src="https://www.footboom.net/img/upload/3/63a18-Krishtianu-Ronaldu.jpeg" alt="">
            </div>
        </div>
    </div>
</div>

<div class="testimonals">
    <div class="container">
        <div class="testimonials__item">
            <div class="testimonials__photo">
                <img class="testimonials__img" src="http://rs.img.com.ua/crop?v2=1&w=600&h=0&url=http%3A%2F%2Fsport.img.com.ua%2Fb%2Forig%2F4%2F6f%2F1f1d44d0a86ad00142b6c03adfbc76f4.jpg" alt="">
            </div>
            <div class="testimonials__content">
                <div class="testimonials__text">“I don't need a fancy hairstyle or a pretty body. Just throw a ball at my feet and I'll show you what I can do.”</div>
                <div class="testimonials__author">Lionel Messi, Argentine footballer</div>
            </div>
        </div>
    </div>
</div>

<div class="testimonals testimonals--white">
    <div class="container">
        <div class="testimonials__item">
            <div class="testimonials__content testimonials__content--black">
                <div class="testimonials__text">“Out on the pitch I want to score and I don't care if I'm a goalkeeper.“</div>
                <div class="testimonials__author">Manuel Neuer, German footballer</div>
            </div>
            <div class="testimonials__photo">
                <img class="testimonials__img testimonials__img--left" " src="https://www.soccer.ru/sites/default/files/styles/content_image/public/blogs/records/gdv_9676.jpg?itok=mKLXWDNm" alt="">
            </div>
        </div>
    </div>
</div>