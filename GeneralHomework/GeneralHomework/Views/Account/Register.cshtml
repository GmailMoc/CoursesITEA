@model AccountRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <span asp-validation-for="FisrtName" class="text-danger"></span><br>
    <label asp-for="FisrtName"></label><br>
    <input asp-for="FisrtName" type="text" /><br>

    <span asp-validation-for="LastName" class="text-danger"></span><br>
    <label asp-for="LastName"></label><br>
    <input asp-for="LastName" type="text" /><br>

    <span asp-validation-for="UserName" class="text-danger"></span><br>
    <label asp-for="UserName"></label><br>
    <input asp-for="UserName" type="text" /><br>

    <span asp-validation-for="Email" class="text-danger"></span><br>
    <label asp-for="Email"></label><br>
    <input asp-for="Email" type="text" /><br>

    <span asp-validation-for="Password" class="text-danger"></span><br>
    <label asp-for="Password"></label><br>
    <input asp-for="Password" type="password" /><br>

    <span asp-validation-for="ConfirmPassword" class="text-danger"></span><br>
    <label asp-for="ConfirmPassword"></label><br>
    <input asp-for="ConfirmPassword" type="password" /><br>

    <button type="submit">Register</button>
</form>